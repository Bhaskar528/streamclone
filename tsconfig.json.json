{
  "compilerOptions": {
  "incremental": true,
  "target": "ES2020",
  "module": "ESNext",
  "lib": ["DOM", "DOM.Iterable", "ESNext"],
  "skipLibCheck": true,
  "strict": false,
  "noEmit": true,
  "moduleResolution": "Node",
  "resolveJsonModule": true,
  "isolatedModules": true,
  "jsx": "preserve",
  "esModuleInterop": true,
  "allowJs": true,
  "baseUrl": ".",
  "paths": {
    "@/*": ["*"],
    "@/components/*": ["components/*"],
    "@/lib/*": ["lib/*"],
    "@/app/*": ["app/*"]
  },
  "plugins": [{ "name": "next" }]
}
,
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
